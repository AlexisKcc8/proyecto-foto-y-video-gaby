---
import { testimonials } from "@data/dataTestimonial";
import { twMerge } from "tailwind-merge";
---

<section class="bg-white relative p-4 sm:px-6 lg:px-8" id="testimonios">
  <div class="max-w-7xl mx-auto text-center relative">
    <h2
      class="text-3xl font-semibold tracking-tight text-gold text-center phone-lg:text-4xl mb-2"
    >
      Lo que nuestros clientes dicen
    </h2>

    <p class="text-base text-cinnamon italic mb-4 laptop:text-xl">
      Experiencias reales, recuerdos inolvidables.
    </p>
    <div class="grid gap-8 tablet:grid-cols-2 laptop:grid-cols-3">
      {
        testimonials !== null ? (
          testimonials.map((testimonial) => (
            <div
              class="bg-gray-50 p-6 rounded-2xl shadow-sm text-left flex flex-col"
              class:list={{
                "hidden laptop:block": !testimonial.mobileOnly,
              }}
            >
              <p class="text-gray-700 italic mb-4 flex-1">
                {testimonial.quote}
              </p>
              <div class="flex items-center gap-4 ">
                <div
                  class={twMerge(
                    "rounded-full w-10 h-10 flex items-center justify-center font-bold",
                    testimonial.bgColor,
                    testimonial.textColor
                  )}
                >
                  {testimonial.initial}
                </div>
                <footer>
                  <p class="font-semibold text-gray-900">{testimonial.name}</p>
                  <p class="text-sm text-yellow-500">★★★★★</p>
                </footer>
              </div>
            </div>
          ))
        ) : (
          <p>no funciona</p>
        )
      }
    </div>
  </div>
</section>
