---
import type { HTMLAttributes } from "astro/types";
import { twMerge } from "tailwind-merge";

// create interface with extends HTMLAttributes<"section">
interface Props extends HTMLAttributes<"section"> {}

const { class: className } = Astro.props;
---

<section
  class={twMerge(
    "overflow-hidden px-6 phone-lg:max-w-4/5 phone-lg:p-0 tablet:max-w-[90%]  ",
    className
  )}
>
  <slot />
</section>
