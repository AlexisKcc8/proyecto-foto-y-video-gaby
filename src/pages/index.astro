---
import "@styles/global.css";
import Layout from "@layouts/Layout.astro";

import Hero from "@components/sections/Hero.astro";
import AboutMe from "@components/sections/AboutMe.astro";
import Services from "@components/sections/Services.astro";
import BannerMessage from "@components/sections/BannerMessage.astro";
import { CarouselPhotos } from "@components/CarouselPhotos";
import Testimonials from "@components/sections/Testimonials.astro";
import BannerLocation from "@components/sections/BannerLocation.astro";
import Footer from "@components/sections/Footer.astro";
import OurLocation from "@components/sections/OurLocation.astro";
---

<Layout title="Foto y vide Gaby ¡Tu solución!">
  <Hero />
  <AboutMe />
  <Services />
  <BannerMessage />
  <CarouselPhotos client:load />
  <BannerLocation />
  <OurLocation />
  <Testimonials />
  <Footer />
</Layout>
<script>
  import { initAOS } from "@scripts/aos";
  document.addEventListener("DOMContentLoaded", () => {
    initAOS();
  });
</script>
